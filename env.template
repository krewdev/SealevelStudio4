# ============================================
# Sealevel Studio - Environment Variables Template
# ============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git!

# ============================================
# Solana RPC Endpoints
# ============================================
# These are used for connecting to Solana networks
# You can use public RPCs or your own Helius/QuickNode endpoints

# Mainnet RPC endpoint (with API key if using Helius/QuickNode)
NEXT_PUBLIC_SOLANA_RPC_MAINNET=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY

# Devnet RPC endpoint (with API key if using Helius/QuickNode)
NEXT_PUBLIC_SOLANA_RPC_DEVNET=https://devnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY

# Default network (mainnet or devnet)
NEXT_PUBLIC_SOLANA_NETWORK=mainnet

# Alternative RPC URL (used as fallback)
NEXT_PUBLIC_RPC_URL=

# ============================================
# API Keys (Server-side only - never expose to client)
# ============================================
# These are used in Next.js API routes and are never sent to the browser

# Helius API Key (for enhanced RPC features and DAS API)
HELIUS_API_KEY=your_helius_api_key_here

# Birdeye API Key (for token price data and market information)
BIRDEYE_API_KEY=your_birdeye_api_key_here

# Dune Analytics API Key (for on-chain analytics queries)
DUNE_API_KEY=your_dune_api_key_here

# Solscan API Key (for transaction and account data)
SOLSCAN_API_KEY=your_solscan_api_key_here

# Jupiter API Key (for swap quotes and transactions - higher rate limits)
# Also enables Jupiter Ultra API (https://api.jup.ag/ultra) for simplified swap execution
JUPITER_API_KEY=your_jupiter_api_key_here

# ============================================
# Client-side API Keys (exposed to browser)
# ============================================
# These are prefixed with NEXT_PUBLIC_ and will be available in the browser
# Only use for APIs that require client-side access

# Helius API Key (for client-side pool fetching)
NEXT_PUBLIC_HELIUS_API_KEY=your_helius_api_key_here

# Birdeye API Key (for client-side price fetching)
NEXT_PUBLIC_BIRDEYE_API_KEY=your_birdeye_api_key_here

# ============================================
# WebSocket URLs (Optional - for real-time updates)
# ============================================

# Helius WebSocket URL (for real-time pool updates)
NEXT_PUBLIC_HELIUS_WS_URL=wss://atlas-mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Birdeye WebSocket URL (for real-time price updates)
NEXT_PUBLIC_BIRDEYE_WS_URL=wss://public-api.birdeye.so/ws

