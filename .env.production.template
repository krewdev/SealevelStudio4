SUBSTACK_PUBLICATION_ID=your_production_substack_publication_id_here
SUBSTACK_EMAIL=your_production_substack_email_here
# SUBSTACK_PASSWORD= (use API key instead)

# ============================================
# Telegram Bot Configuration (Production)
# ============================================
# Production Telegram bot token

TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# ============================================
# Admin Configuration (Production)
# ============================================
# Generate a secure random token for production
# Use: openssl rand -hex 32

ADMIN_API_TOKEN=your_secure_production_admin_token_here

# ============================================
# Webhook Configuration (Production)
# ============================================
# Webhook secrets for secure webhook validation

HELIUS_WEBHOOK_SECRET=your_secure_webhook_secret_here

# ============================================
# Security Settings (Production)
# ============================================

# Enable strict security headers
NEXT_PUBLIC_SECURE_MODE=true

# Rate limiting (if using custom rate limiting)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# Performance Settings (Production)
# ============================================

# Enable production optimizations
NEXT_PUBLIC_OPTIMIZE_IMAGES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ============================================
# Monitoring & Logging (Production)
# ============================================
# Configure production logging and monitoring

LOG_LEVEL=warn
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true

# ============================================
# Notes for Production
# ============================================
#
# 1. Security:
#    - Never commit this file or .env.production.local to git
#    - Use platform secrets management (Vercel, AWS Secrets Manager, etc.)
#    - Rotate API keys regularly
#    - Use different keys for production vs development
#
# 2. Performance:
#    - Use production-grade RPC endpoints (Helius, QuickNode)
#    - Enable Redis for caching
#    - Use CDN for static assets (automatic with Vercel)
#
# 3. Monitoring:
#    - Set up error tracking (Sentry, LogRocket, etc.)
#    - Monitor API rate limits
#    - Track performance metrics
#
# 4. Backup:
#    - Keep secure backups of all API keys
#    - Document all configuration values
#    - Use version control for non-sensitive config
#
# 5. Deployment:
#    - Test production build locally: npm run build && npm start
#    - Verify all environment variables are set
#    - Check webhook URLs are updated
#    - Verify OAuth callback URLs match production domain
