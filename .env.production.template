MCP_SERVER_URL=http://localhost:8000
MCP_API_KEY=your_secure_production_mcp_api_key_here
MCP_LOG_LEVEL=warn

# ============================================
# Redis Configuration (Production)
# ============================================
# Recommended for production - improves performance and enables distributed caching

REDIS_ENABLED=true
REDIS_URL=redis://your-redis-host:6379
# REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ============================================
# Twitter API Configuration (Production)
# ============================================
# Production OAuth 2.0 credentials

TWITTER_CLIENT_ID=your_production_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_production_twitter_client_secret_here
TWITTER_CALLBACK_URL=https://your-domain.com/api/twitter/auth/callback

# DO NOT use direct access tokens in production - use OAuth flow only
# TWITTER_ACCESS_TOKEN=
# TWITTER_ACCESS_TOKEN_SECRET=
